{
    // global
    "security.workspace.trust.untrustedFiles": "open",
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "workbench.iconTheme": "vscode-icons",
    "workbench.colorTheme": "Github Light Theme",
    "workbench.startupEditor": "newUntitledFile",
    "workbench.statusBar.visible": true,
    "workbench.activityBar.visible": true,
    "workbench.editor.wrapTabs": true,
    "workbench.colorCustomizations": {
        "editorBracketHighlight.foreground1": "#006834",
        "editorBracketHighlight.foreground2": "#da70d6",
        "editorBracketHighlight.foreground3": "#53bafa",
        "editorBracketHighlight.foreground4": "#991503",
        "editorBracketHighlight.foreground5": "#da70d6",
        "editorBracketHighlight.foreground6": "#53bafa",
        "editorBracketHighlight.unexpectedBracket.foreground": "#ff0000"
    },
    // editor config
    "editor.fontSize": 16,
    "editor.fontFamily": "Consolas, '微软雅黑', monospace",
    "editor.renderWhitespace": "all",
    "editor.detectIndentation": false,
    "editor.suggest.snippetsPreventQuickSuggestions": false,
    "editor.suggestSelection": "first",
    "editor.cursorSurroundingLines": 10,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.minimap.enabled": false,
    "editor.unicodeHighlight.nonBasicASCII": false,
    "editor.guides.bracketPairs": "active",
    "editor.bracketPairColorization.enabled": true,
    "editor.rulers": [
        120
    ],
    // vim emulator
    "vim.easymotion": true,
    "vim.useSystemClipboard": true,
    "vim.history": 1000,
    "vim.showmodename": true,
    "vim.showcmd": true,
    "vim.incsearch": true,
    "vim.ignorecase": true,
    "vim.smartcase": true,
    "vim.useCtrlKeys": true,
    "vim.smartRelativeLine": true,
    "vim.scroll": 10,
    "vim.leader": "<space>",
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": [
                "g",
                "j"
            ],
            "commands": [
                "workbench.action.navigateBack"
            ]
        },
        {
            "before": [
                "<leader>",
                "v"
            ],
            "commands": [
                "extension.vim_ctrl+v"
            ]
        },
        {
            "before": [
                "<leader>",
                "h",
            ],
            "commands": [
                "editor.action.triggerParameterHints"
            ]
        }
    ],
    "vim.handleKeys": {
        "<C-a>": false,
        "<C-b>": false,
        "<C-c>": false,
        "<C-d>": false,
        "<C-e>": false,
        "<C-f>": false,
        "<C-j>": false,
        "<C-h>": false,
        "<C-i>": false,
        "<C-g>": false,
        "<C-k>": false,
        "<C-l>": false,
        "<C-m>": false,
        "<C-n>": false,
        "<C-o>": false,
        "<C-p>": false,
        "<C-q>": false,
        "<C-r>": false,
        "<C-s>": false,
        "<C-t>": false,
        "<C-u>": false,
        "<C-v>": false,
        "<C-w>": false,
        "<C-x>": false,
        "<C-y>": false,
        "<C-z>": false
    },
    // terminal
    "terminal.integrated.fontFamily": "FuraCode Nerd Font Mono",
    "terminal.external.windowsExec": "C:\\Program Files\\PowerShell\\7\\pwsh.exe",
    "remote.SSH.remotePlatform": {
        "webdev": "linux"
    },
    // ====================== wsl config ======================
    // backup cmd: code --list-extensions > extensions.json && sed -i 's/.*/\t\t\"&\",/' extensions.json && sed -i '$ s/.$//' extensions.json &&sed -i '1i {\n\t\"recommendations\": [' extensions.json && sed -i '$a \\t]\n}' extensions.json
    // git and plugin config
    "GitCommitPlugin.MaxSubjectCharacters": 30,
    "gitlens.advanced.messages": {
        "suppressGitVersionWarning": true
    },
    // Markdown and plugins
    "markdown.preview.fontSize": 18,
    "markdown.preview.lineHeight": 1.8,
    "markdownFormatter.formatULSymbol": false,
    "markdown-preview-enhanced.codeBlockTheme": "atom-light.css",
    "markdown-preview-enhanced.previewTheme": "github-light.css",
    "markdown-preview-enhanced.enableScriptExecution": true,
    "markdown.preview.doubleClickToSwitchToEditor": false,
    "markdown-preview-enhanced.enableExtendedTableSyntax": true,
    "markdown-preview-enhanced.enableTypographer": true,
    "markdown-preview-enhanced.enableCriticMarkupSyntax": true,
    "markdown-preview-enhanced.mathBlockDelimiters": [
        [
            "$$",
            "$$"
        ],
        [
            "\\[",
            "\\]"
        ]
    ],
    "markdown-preview-enhanced.mathInlineDelimiters": [
        [
            "$",
            "$"
        ],
        [
            "\\(",
            "\\)"
        ]
    ],
    "[markdown]": {
        // quickly complete
        "editor.quickSuggestions": {
            "other": true,
            "comments": true,
            "strings": true
        },
        "editor.defaultFormatter": "mervin.markdown-formatter",
    },
    // set c&c++ dev env
    "C_Cpp.clang_format_style": "Google",
    "C_Cpp.clang_format_fallbackStyle": "Google",
    "[cpp]": {
        "editor.defaultFormatter": "ms-vscode.cpptools"
    },
    // python config
    "[python]": {
        "editor.defaultFormatter": "ms-python.python"
    },
    // go env
    "go.toolsManagement.autoUpdate": true,
    "[go]": {
        "editor.defaultFormatter": "golang.go"
    },
    // format
    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    }
}
{
	"window.commandCenter": false,
	"explorer.confirmDelete": false,
	"explorer.confirmDragAndDrop": false,
	"workbench.statusBar.visible": true,
	"workbench.activityBar.visible": true,
	"workbench.iconTheme": "vscode-icons",
	"workbench.startupEditor": "newUntitledFile",
	"workbench.colorTheme": "Custom Light by Aidan",
	"workbench.colorCustomizations": {
		"editorBracketHighlight.foreground1": "#006834",
		"editorBracketHighlight.foreground2": "#da70d6",
		"editorBracketHighlight.foreground3": "#53bafa",
		"editorBracketHighlight.foreground4": "#991503",
		"editorBracketHighlight.foreground5": "#da70d6",
		"editorBracketHighlight.foreground6": "#53bafa",
		"editorBracketHighlight.unexpectedBracket.foreground": "#ff0000"
	},
	// editor config
	"editor.fontSize": 16,
	"editor.formatOnSave": true,
	"editor.insertSpaces": false,
	"editor.minimap.enabled": false,
	"editor.renderWhitespace": "all",
	"editor.detectIndentation": false,
	"editor.suggestSelection": "first",
	"editor.cursorSurroundingLines": 10,
	"editor.guides.bracketPairs": "active",
	"editor.unicodeHighlight.nonBasicASCII": false,
	"editor.bracketPairColorization.enabled": true,
	"editor.suggest.snippetsPreventQuickSuggestions": false,
	"editor.fontFamily": "Consolas, '微软雅黑', monospace",
	"editor.rulers": [
		120
	],
	// security config
	"security.workspace.trust.untrustedFiles": "open",
	// terminal config
	"terminal.integrated.fontFamily": "FuraCode Nerd Font Mono",
	"terminal.external.windowsExec": "C:\\Program Files\\PowerShell\\7\\pwsh.exe",
	// remote config
	"remote.SSH.remotePlatform": {
		"webdev": "linux"
	},
	// vim emulator
	"vim.scroll": 10,
	"vim.history": 1000,
	"vim.showcmd": true,
	"vim.incsearch": true,
	"vim.ignorecase": true,
	"vim.smartcase": true,
	"vim.easymotion": true,
	"vim.showmodename": true,
	"vim.useCtrlKeys": false,
	"vim.smartRelativeLine": true,
	"vim.useSystemClipboard": true,
	"vim.leader": "<space>",
	"vim.normalModeKeyBindingsNonRecursive": [
		{
			"before": [
				"g",
				"j"
			],
			"commands": [
				"workbench.action.navigateBack"
			]
		},
		{
			"before": [
				"<leader>",
				"v"
			],
			"commands": [
				"extension.vim_ctrl+v"
			]
		},
		{
			"before": [
				"<leader>",
				"h"
			],
			"commands": [
				"editor.action.triggerParameterHints"
			]
		}
	],
	// ====================== wsl config ======================
	// backup cmd: code --list-extensions > extensions.json && sed -i 's/.*/\t\t\"&\",/' extensions.json && sed -i '$ s/.$//' extensions.json &&sed -i '1i {\n\t\"recommendations\": [' extensions.json && sed -i '$a \\t]\n}' extensions.json
	"git.confirmSync": false,
	"git.mergeEditor": true,
	"git.ignoreLegacyWarning": true,
	"diffEditor.ignoreTrimWhitespace": false,
	"GitCommitPlugin.MaxSubjectCharacters": 30,
	"gitlens.advanced.messages": {
		"suppressGitVersionWarning": true
	},
	"pangu.auto_format_on_save": true,
	"markdownFormatter.formatULSymbol": false,
	"markdown.preview.fontSize": 18,
	"markdown.preview.lineHeight": 1.8,
	"markdown-preview-enhanced.codeBlockTheme": "atom-light.css",
	"markdown-preview-enhanced.enableScriptExecution": true,
	"markdown.preview.doubleClickToSwitchToEditor": false,
	"markdown-preview-enhanced.enableExtendedTableSyntax": true,
	"markdown-preview-enhanced.enableTypographer": true,
	"markdown-preview-enhanced.enableCriticMarkupSyntax": true,
	"markdown-preview-enhanced.mathBlockDelimiters": [
		[
			"$$",
			"$$"
		],
		[
			"\\[",
			"\\]"
		]
	],
	"markdown-preview-enhanced.mathInlineDelimiters": [
		[
			"$",
			"$"
		],
		[
			"\\(",
			"\\)"
		]
	],
	"[markdown]": {
		"editor.quickSuggestions": {
			"other": true,
			"comments": true,
			"strings": true
		},
		"editor.defaultFormatter": "mervin.markdown-formatter"
	},
	"go.toolsManagement.autoUpdate": true,
	"python.languageServer": "Pylance",
	"[python]": {
		"editor.defaultFormatter": "ms-python.black-formatter"
	},
	"[json]": {
		"editor.defaultFormatter": "vscode.json-language-features"
	}
}
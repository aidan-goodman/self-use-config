" M->cmd, A->option, C->control

" set leader key
let mapleader = " "

" clipboard sharing
set clipboard=unnamedplus,unnamed
set clipboard+=ideaput
" copy in select mode
if has("clipboard")
    vnoremap <C-C>
endif

" use line numbers
set number
set relativenumber
set scrolloff=10
" enable multi cursor
set multiple-cursors

" show more info
set showmatch
set showmode
set showcmd

" search
"set hlsearch
set incsearch
set ignorecase
set smartcase

" move half page faster
nnoremap <Leader>d  <C-d>
nnoremap <Leader>u  <C-u>
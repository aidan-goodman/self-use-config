" M->cmd, A->option, C->control
" <ESC> - escape, <BS> - backspace, <CR> - return

" set leader key
let mapleader = " "

" enable multi cursor
set multiple-cursors

" vim's default registers and system clipboard sharing
set clipboard=unnamedplus,unnamed
" copy in select mode
if has("clipboard")
    vnoremap <C-C>
endif

" use relative line numbers and line
set number
set relativenumber
set scrolloff=10

" set the matching bracket
set showmatch
set showmode

set ignorecase smartcase hlsearch incsearch